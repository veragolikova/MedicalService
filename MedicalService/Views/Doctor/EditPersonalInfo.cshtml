@model MedicalService.ViewModels.DoctorViewModels.EditPersonalInfoModel

<h4>Edit Personal Information</h4>
<div class="row">
    <div class="col-md-6">
        <form form asp-action="EditPersonalInfo" asp-controller="Doctor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control"/>

            </div>
            <div class="form-group">
                <label asp-for="MiddleName">Middle Name</label>
                <input asp-for="MiddleName" class="form-control"/>
                
            </div>
            <div class="form-group">
                <label asp-for="SecondName">Second Name</label>
                <input asp-for="SecondName" class="form-control"/>
                
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth">Date of Birth</label>
                <input asp-for="DateOfBirth" class="form-control" type="date"/>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentName">Department Name</label>
                <input asp-for="DepartmentName" class="form-control"/>
            </div>
                <div class="form-group">
                <label asp-for="DepartmentNumber">Department Number</label>
                <input asp-for="DepartmentNumber" class="form-control"/>
            </div>
                <div class="form-group">
                <label asp-for="Specialty">Specialty</label>
                <input asp-for="Specialty" class="form-control"/>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-outline-success">Save</button>
        </form>
    </div>
</div>