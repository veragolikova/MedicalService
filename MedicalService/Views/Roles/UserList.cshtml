@model IEnumerable<MedicalService.Models.User>
 
<h2>List of users
    <a class="btn btn-outline-secondary" role="button" asp-area="" asp-controller="Users" asp-action="Create">Create user</a>
</h2>
<table class="table">
    <tr>
        <th>Email</th>
        <th>UserName</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @if(Model.Count() == 0)
    {
        <tr>
            <td colspan="2" class="text-center">No data</td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Roles" asp-route-userid="@user.Id">Access rights</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class = "compItem">Edit</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Users" asp-route-id="@user.Id" method="post" class = "compItem">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>

            </tr>
        }
    }
</table>