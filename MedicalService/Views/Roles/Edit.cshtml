@using Microsoft.AspNetCore.Identity
@model MedicalService.ViewModels.ChangeRoleViewModel
 
<h2>Changing roles for the user: @Model.UserEmail</h2>
 
<form asp-action="Edit" asp-controller="Roles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\" " : " ") /> @role.Name <br />
        }
    </div>
    <button type="submit" class="btn btn-outline-success">Save</button>
    <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="UserList">Back</a>
</form>
