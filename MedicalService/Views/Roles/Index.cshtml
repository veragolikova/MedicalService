@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
 
<h2>List Of Roles</h2>
@*<a style="width: -webkit-fill-available" class="btn btn-outline-secondary" role="button" asp-area="" asp-action="UserList">List of users</a>*@
<table class="table">
    @if(Model.Count() == 0)
    {
        <tr>
            <td colspan="2" class="text-center">No data</td>
        </tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
