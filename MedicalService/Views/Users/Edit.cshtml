@model MedicalService.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Edit user";
}
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <button id="update-profile-button" type="submit" class="btn btn-outline-success">Save</button>
    <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="UserList">Back</a>
</form>
