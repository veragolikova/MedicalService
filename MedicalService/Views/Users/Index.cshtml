@model IEnumerable<MedicalService.Models.User>

@{
    ViewBag.Title = "List of users";
}
<link href="../wwwroot/libs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
<a asp-action="Create" asp-controller="Users">Create user</a> 
<table class="table">
    <tr><th>Id</th><th>Email</th><th></th></tr>
    @if(Model.Count() == 0)
    {
        <tr>
            <td colspan="2" class="text-center">No data</td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class = "compItem">
                        <a class="btn btn-sm btn-primary" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class = "compItem">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

  <!-- jQuery -->
  <script src="../wwwroot/js/jquery/dist/jquery.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="../wwwroot/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
